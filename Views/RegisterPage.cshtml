@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<FoodieGuide.Web.Models.RegisterModel>
@model FoodieGuide.Web.Models.RegisterModel
@{
  Layout = "master.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<div class="d-flex justify-content-center align-items-start"
    style="min-height: 100vh; padding-top: 50px; background-color: #f9f9f9">
    <div class="card p-5 shadow rounded" style="width: 100%; max-width: 600px; background-color: white;">

        @using (Html.BeginUmbracoForm("HandleRegister", "MembersSurface"))
        {
          <h2 class="section-title text-center fw-bold">Register</h2>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" aria-required="true" />
          <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Username" class="form-label"></label>
          <input asp-for="Username" class="form-control" aria-required="true" />
          <span asp-validation-for="Username" class="form-text text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Email" class="form-label"></label>
          <input asp-for="Email" class="form-control" aria-required="true" />
          <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Password" class="form-label"></label>
          <input asp-for="Password" class="form-control" aria-required="true" />
          <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="ConfirmPassword" class="form-label"></label>
          <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
          <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
        </div>

        <div class="d-flex align-items-center gap-2 mt-2">
          <button type="submit" class="btn btn-primary"
            style="border-radius: 50px; background-color: #3b5998; color:white">Register</button>
          <span class="m-0">
            Already have an account?
            <a href="/login" style="color: #3b5998">Login</a>
          </span>
        </div>
        }
    </div>
</div>